{
  "parser": "@typescript-eslint/parser",
  "plugins": ["import", "@typescript-eslint"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended",
    "standard",
    "prettier"
  ],
  "root": true,
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".jpg",
          ".jpeg",
          ".png",
          ".svg"
        ]
      }
    }
  },
  "ignorePatterns": ["components/build-assets/**"]
}
